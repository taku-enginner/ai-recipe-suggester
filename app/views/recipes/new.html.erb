<%# app/views/recipes/new.html.erb %>
<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold text-center mb-6">AI献立サジェストアプリ</h1>

  <%# フラッシュメッセージ表示用のコンテナを設置 %>
  <div id="flash-messages">
    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>
  </div>

  <%= turbo_frame_tag "recipe_form" do %>
    <%= form_with url: recipes_path, method: :post do |form| %>
      <div class="mb-4">
        <%= form.label :ingredients, "冷蔵庫にある食材をカンマ区切りで入力してください", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :ingredients, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", rows: 3, placeholder: "例：豚肉, 玉ねぎ, 卵" %>
      </div>

      <div class="flex items-center justify-center">
        <%= form.submit "レシピを提案してもらう", id: "recipe-submit-button", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
      </div>
    <% end %>

    <%# エラーメッセージ表示エリアを追加 %>
    <div id="error-message-area">
      <% if @error_message %>
        <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">エラー:</strong>
          <span class="block sm:inline"><%= @error_message %></span>
        </div>
      <% end %>
    </div>

    <%# ローディング表示用の要素を追加 %>
    <div id="loading-indicator" class="hidden text-center mt-4">
      <p class="text-gray-600">AIがレシピを考えています...</p>
    </div>

    <%# レシピ表示エリア %>
    <div id="recipe-result-area"></div>
  <% end %>
</div>

