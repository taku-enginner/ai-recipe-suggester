<%# app/views/recipes/create.html.erb %>
<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold text-center mb-6">AIからのレシピ提案</h1>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <!-- レシピ名を表示 -->
    <h2 class="text-2xl font-bold mb-2"><%= @recipe['recipeName'] %></h2>
    <!-- 説明文を表示 -->
    <p class="text-gray-700 mb-4"><%= @recipe['description'] %></p>

    <!-- 材料リストを表示 -->
    <h3 class="text-xl font-semibold mb-2">材料</h3>
    <ul class="list-disc list-inside mb-4">
      <% @recipe['ingredients'].each do |ingredient| %>
        <li><%= ingredient['name'] %> - <%= ingredient['quantity'] %></li>
      <% end %>
    </ul>

    <!-- 手順リストを表示 -->
    <h3 class="text-xl font-semibold mb-2">手順</h3>
    <ol class="list-decimal list-inside">
      <% @recipe['instructions'].each do |instruction| %>
        <li><%= instruction %></li>
      <% end %>
    </ol>
  </div>

  <div class="text-center mt-6">
    <%= link_to "もう一度試す", root_path, class: "text-blue-500 hover:text-blue-800" %>
  </div>
</div>
